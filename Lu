        <h1>¬øme perdonas?</h1>
        
        <div class="message">
            <p>met√≠ la pata, te amo</p>
            <p>perd√≥n</p>
        </div>

        <div class="buttons">
            <button class="btn btn-yes" onclick="forgive()">s√≠</button>
            <button class="btn btn-no" id="noBtn" onmouseover="runAway()" onclick="runAway()">no</button>
        </div>

        <div class="success-message" id="successMessage">
            <p>genial, gracias</p>
            <p>todo solucionado</p>
        </div>
    </div>

    <div class="confetti" id="confetti"></div>

    <script>
        function forgive() {
            document.getElementById('successMessage').style.display = 'block';
            document.querySelector('.buttons').style.display = 'none';
            document.querySelector('.message').innerHTML = '<p>perfecto, ya quedamos a mano</p>';
            
            // Crear confetti
            createConfetti();
            
            // Cambiar el t√≠tulo
            document.querySelector('h1').textContent = 'listo';
            document.querySelector('h1').style.color = '#00b894';
            
            // Enviar notificaci√≥n de que toc√≥ "s√≠"
            sendNotification('¬°Toc√≥ S√ç! üéâ');
        }

        function runAway() {
            const noBtn = document.getElementById('noBtn');
            const maxX = window.innerWidth - noBtn.offsetWidth - 20;
            const maxY = window.innerHeight - noBtn.offsetHeight - 20;
            
            const randomX = Math.random() * maxX;
            const randomY = Math.random() * maxY;
            
            noBtn.style.position = 'fixed';
            noBtn.style.left = randomX + 'px';
            noBtn.style.top = randomY + 'px';
            noBtn.style.transform = 'scale(0.9)';
            
            // Cambiar el texto del bot√≥n
            const texts = ['no', 'nope', 'nel', 'jam√°s', 'ni modo'];
            noBtn.textContent = texts[Math.floor(Math.random() * texts.length)];
            
            // Enviar notificaci√≥n de que intent√≥ tocar "no"
            sendNotification('Intent√≥ tocar NO pero se escap√≥ üòÑ');
        }

        function sendNotification(message) {
            // Crear una notificaci√≥n visual en la p√°gina
            const notification = document.createElement('div');
            notification.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                background: rgba(0,0,0,0.8);
                color: white;
                padding: 15px 20px;
                border-radius: 10px;
                font-size: 14px;
                z-index: 10000;
                backdrop-filter: blur(10px);
                border: 1px solid rgba(255,255,255,0.2);
                animation: slideIn 0.3s ease;
            `;
            notification.textContent = message;
            document.body.appendChild(notification);
            
            // Remover la notificaci√≥n despu√©s de 3 segundos
            setTimeout(() => {
                if (notification.parentNode) {
                    notification.style.animation = 'slideOut 0.3s ease';
                    setTimeout(() => {
                        if (notification.parentNode) {
                            notification.parentNode.removeChild(notification);
                        }
                    }, 300);
                }
            }, 3000);
            
            // Si el navegador soporta notificaciones push, pedirlas
            if ('Notification' in window) {
                if (Notification.permission === 'granted') {
                    new Notification('Estado del perd√≥n', {
                        body: message,
                        icon: 'üöó'
                    });
                } else if (Notification.permission !== 'denied') {
                    Notification.requestPermission().then(permission => {
                        if (permission === 'granted') {
                            new Notification('Estado del perd√≥n', {
                                body: message,
                                icon: 'üöó'
                            });
                        }
                    });
                }
            }
        }

        function createConfetti() {
            const confetti = document.getElementById('confetti');
            const colors = ['#00b894', '#0984e3', '#6c5ce7', '#fd79a8', '#fdcb6e'];
            
            for (let i = 0; i < 40; i++) {
                const piece = document.createElement('div');
                piece.className = 'confetti-piece';
                piece.style.left = Math.random() * 100 + '%';
                piece.style.background = colors[Math.floor(Math.random() * colors.length)];
                piece.style.animationDelay = Math.random() * 3 + 's';
                piece.style.animationDuration = (Math.random() * 2 + 3) + 's';
                confetti.appendChild(piece);
                
                setTimeout(() => {
                    if (piece.parentNode) {
                        piece.parentNode.removeChild(piece);
                    }
                }, 6000);
            }
        }

        // Agregar m√°s autitos cada cierto tiempo
        setInterval(() => {
            const cars = ['üöó', 'üöô', 'üèéÔ∏è', 'üöì', 'üöï'];
            const newCar = document.createElement('div');
            newCar.className = 'car';
            newCar.innerHTML = cars[Math.floor(Math.random() * cars.length)];
            newCar.style.top = (Math.random() * 70 + 10) + '%';
            newCar.style.fontSize = (Math.random() * 1.5 + 2) + 'em';
            newCar.style.animationDuration = (Math.random() * 5 + 8) + 's';
            newCar.style.left = '-150px';
            document.body.appendChild(newCar);
            
            setTimeout(() => {
                if (newCar.parentNode) {
                    newCar.parentNode.removeChild(newCar);
                }
            }, 15000);
        }, 3000);
    </script>
